def processAlerts(currentHour: Int, currentMin: Int): Unit = {
  val isBefore10Min = currentMin < 10
  val isAfter5Min = currentMin >= 5

  if (currentHour == 19 && isBefore10Min) {
    sendMissedAlertsEmail(Set("D")) // Daily missed alerts
  } else if (currentHour == 19 && isAfter5Min) {
    waitForTargetTime(19, 5)
    sendMissedAlertsEmail(Set("D"))
  } else if (currentHour == 19 && isBefore10Min) {
    sendMissedAlertsEmail(Set("W", "M")) // Weekly & Monthly missed alerts
  } else if (currentHour == 19 && isAfter5Min) {
    waitForTargetTime(19, 5)
    sendMissedAlertsEmail(Set("W", "M"))
  } else if (currentHour == 19 && isBefore10Min) {
    sendConsolidatedEmail(combinedSuccessAlerts, combinedFailedAlerts, missedAlerts)
  } else if (currentHour == 19 && isAfter5Min) {
    waitForTargetTime(19, 5)
    sendConsolidatedEmail(combinedSuccessAlerts, combinedFailedAlerts, missedAlerts)
    println("[INFO] Sent Consolidated Email at 8:05 PM")
  } else {
    println("[INFO] Not a cutoff time for Consolidated or Individual emails")
  }
}
