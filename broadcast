import java.time.format.DateTimeFormatter
import java.time.{LocalDateTime, ZoneId}

val cutoffTime: LocalDateTime = LocalDateTime.now() // Example
val formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm")
val formattedCutoffTime = cutoffTime.format(formatter)

// formattedCutoffTime will be something like "2025-03-06 16:00"
